  include ../partials/_portfolio
  #clients.container-fluid.my-5
    .container
      .row
        .col-3.col-sm-4.divider.my-auto
        .col-6.col-sm-4.text-center
          h1.h2.text-uppercase.black.my-4 our clients
        .col-3.col-sm-4.divider.my-auto
      .owl-carousel.owl-theme
        div.p-2
