        div.p-2
          img(src='https://www.solodev.com/assets/carousel/image6.png')

  #contact.container-fluid.p-5
    .container
      .row
        .col-8.offset-2
          .row
            .col-3.divider.my-auto.hide-xs
            .col-12.col-md-6.text-center
              h1.h2.text-uppercase.black.my-4 contact us
            .col-3.divider.my-auto.hide-xs
      .row
        .col-md-8.offset-md-2.mt-3
          .form.theme-font(method='post' action='formMail.php')
            .form-row
              .col-sm
                input.form-control.rounded-0(type='text' name='firstName' placeholder='Name')
              .col-sm
                input.form-control.rounded-0(type='text' name='lasttName' placeholder='Lastname')
            .row
              .col
                input.form-control.rounded-0.my-2(type='email' name='email' placeholder='e-mail')
                input.form-control.rounded-0.my-2(type='text' name='subject' placeholder='Subject')
                textarea.form-control.rounded-0.my-2(name='message', cols="30", rows="10" placeholder='Message')
            .row
              .col-sm-6.offset-sm-3    
                button.btn-submit.mb-2.text-uppercase(type="submit") send

